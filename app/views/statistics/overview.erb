<%= javascript_include_tag "statistics_overview" %>

<div class="container">
  <div class="columns is-centered">
    <div class="column is-full has-text-centered">
      <p class="title is-2">Total Listens: <%= Hear.where(user_id: current_user).count %></p>
      <br>
      <%= column_chart Hear.where(user_id: current_user.id).group_by_month(:created_at, format: '%b %Y').count, title: 'Listens by Month' %>
      <br>

      <%= pie_chart Hear.where(user_id: current_user.id).group_by_day_of_week(:created_at, format: '%A').count, title: 'Listens by Day of the Week' %>
      <br>

      <div class="columns is-centered">
        <div class="column is-narrow has-text-centered">
          <%= pie_chart @explicit_hash, title: 'Explicit Listens', width: "600px", height: "300px" %>
        </div>
        <div class="column is-narrow has-text-centered">
          <%= pie_chart @popular_listens_hash, title: 'Popularity of Listens', width: "600px", height: "300px" %>
        </div>
      </div>

      <br>
      <br>
      <p class="title is-3">Top Artists by Month</p>

      <div class="columns is-centered">
        <% @top_artists_6_months.each do |hash| %>
          <% hash.each do |month, top_artists| %>
          <% next if top_artists == {} %>
            <div class="column is-narrow has-text-centered">
              <table class="table is-striped is-hoverable">
                <thead>
                <tr>
                  <td><b><%= month %></b></td>
                </tr>
                </thead>
                <tbody>
                  <% top_artists.each do |artist, count| %>
                    <% next if artist == '' || artist == 'Unknown' %>
                    <tr><td><%= artist %></td></tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
